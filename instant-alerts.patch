+-- BeeScale – instantní alerty (rychlý skok hmotnosti)
+-- Datum: 2025-08-28
+-- Tabulky s prefixem `vcely_`
+
+ALTER TABLE vcely_devices
+  ADD COLUMN instant_alert_enabled TINYINT(1) NOT NULL DEFAULT 1,
+  ADD COLUMN instant_delta_g INT NOT NULL DEFAULT 3000,      -- práh v gramech (např. 3000 = 3 kg)
+  ADD COLUMN instant_window_min INT NOT NULL DEFAULT 10,     -- okno pro porovnání (v minutách)
+  ADD COLUMN instant_cooldown_min INT NOT NULL DEFAULT 60;   -- minimální rozestup alertů (v minutách)
+
+CREATE TABLE IF NOT EXISTS vcely_alerts (
+  id BIGINT UNSIGNED PRIMARY KEY AUTO_INCREMENT,
+  device_id BIGINT UNSIGNED NOT NULL,
+  type VARCHAR(64) NOT NULL,            -- např. 'instant_delta'
+  severity VARCHAR(16) NOT NULL DEFAULT 'warning',
+  title VARCHAR(255) NOT NULL,
+  message TEXT NOT NULL,
+  created_at DATETIME NOT NULL DEFAULT CURRENT_TIMESTAMP,
+  INDEX idx_dev_created (device_id, created_at)
+) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;
+
+-- volitelné: nastav výchozí hodnoty všem zařízením
+UPDATE vcely_devices
+   SET instant_alert_enabled = 1,
+       instant_delta_g       = 3000,
+       instant_window_min    = 10,
+       instant_cooldown_min  = 60;
